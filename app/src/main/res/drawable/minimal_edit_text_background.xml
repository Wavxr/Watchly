<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused State -->
    <item android:state_focused="true">
        <shape>
            <corners android:radius="16dp" /> <!-- More rounded corners for modern look -->
            <stroke
                android:color="@color/orange"
                android:width="1.5dp" /> <!-- Thinner orange border on focus -->
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape>
            <corners android:radius="16dp" /> <!-- More rounded corners -->
            <stroke
                android:color="@color/white"
            android:width="1.5dp" /> <!-- Thinner border -->
        </shape>
    </item>
</selector>
